<?xml version="1.0" encoding="utf-8"?><!-- 重置密码 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 重置密码 -->

    <com.kennie.library.views.widget.ClearEditText
        android:id="@+id/et_reset_password_password1"
        style="@style/EditText_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_safe"
        android:drawablePadding="@dimen/dp_15"
        android:hint="@string/module_user_register_password_hint1"
        android:inputType="number"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_18"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        style="@style/Line_HorizontalStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_reset_password_password1" />


    <com.kennie.library.views.widget.ClearEditText
        android:id="@+id/et_reset_password_password2"
        style="@style/EditText_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_safe"
        android:drawablePadding="@dimen/dp_15"
        android:hint="@string/module_user_register_password_hint2"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="4"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_18"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reset_password_commit"
        style="@style/Btn_RoundGreen_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_marginVertical="@dimen/dp_30"
        android:enabled="false"
        android:text="@string/complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_reset_password_password2" />

</androidx.constraintlayout.widget.ConstraintLayout>